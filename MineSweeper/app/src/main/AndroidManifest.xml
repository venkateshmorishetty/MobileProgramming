<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.minesweeper">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_mine_sweeper"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HighscoresActivity"></activity>
        <activity android:name=".MineSweeper" />
        <activity android:name=".instructions" />
        <activity android:name=".scores" />
        <activity android:name=".PlayGame" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>